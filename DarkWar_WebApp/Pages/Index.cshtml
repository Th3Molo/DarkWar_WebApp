@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center text-light ">
    <h1 class="display-4 mt-5">Alliance Login</h1>

    @if (Model.LoginFailed)
    {
        <div class="alert alert-danger">Invalid username or password</div>
    }

    <form method="post" class="mt-4">
        <div class="d-flex justify-content-center">
            <div class="w-25 mb-4">
                <label asp-for="Username" class="fs-4"></label>
                <input asp-for="Username" class="form-control bg-dark text-light" />
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="w-25">
                <label asp-for="Password" class="fs-4"></label>
                <input asp-for="Password" class="form-control bg-dark text-light" type="password"/>
            </div>
        </div>

        <button type="submit" class="btn btn-primary fs-4 mt-4 bg-dark border-1 border-light">Login</button>
    </form>
</div>

