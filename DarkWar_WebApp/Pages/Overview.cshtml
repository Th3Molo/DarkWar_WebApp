@page
@model DarkWar_WebApp.Pages.OverviewModel
@{
    ViewData["Title"] = "Player Overview";
}

<h2>Player Overview</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Rank</th>
            <th>CP</th>
            <th>Watchtower Level</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.PlayerList)
        {
            <tr>
                <td>@player.PlayerName</td>
                <td>@player.Rank</td>
                <td>@player.CP</td>
                <td>@player.WatchtowerLevel</td>
            </tr>
        }
    </tbody>
</table>

