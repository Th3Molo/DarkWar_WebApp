@page
@model DarkWar_WebApp.Pages.OverviewModel
@{
    ViewData["Title"] = "Player Overview";
}

<h2>Player Overview</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Rank</th>
            <th>CP</th>
            <th>Watchtower Level</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.PlayerList)
        {
            <tr>
                <td>@player.PlayerName</td>
                <td>@player.Rank</td>
                <td>@player.CP.ToString("N0", new System.Globalization.CultureInfo("de-DE"))</td>
                <td>@player.WatchtowerLevel</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function formatCP(input) {
        let raw = input.value.replace(/\D/g, ""); // nur Zahlen
        if (!raw) {
            input.value = "";
            return;
        }

        let withDots = raw.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        input.value = withDots;
    }
</script>